{
  "name": "lucky-api",
  "version": "0.0.1",
  "description": "test coding assessment",
  "author": "gerosalas",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts' --fix ",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "commit": "git-cz",
    "ci": "npm run build && npm test",
    "db:init": "knex migrate:latest --debug --client pg --connection $(grep DB_URL .env | cut -d '=' -f2) --migrations-directory ./src/config/migrations",
    "deploy:heroku": "chmod +x ./deployHeroku.sh && sudo ./deployHeroku.sh",
    "deploy:aws": "chmod +x ./deployAWS.sh && sudo ./deployAWS.sh"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint",
      "pre-push": "npm run ci"
    }
  },
  "dependencies": {
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.4",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.5.2",
    "@nestjs/swagger": "^4.6.1",
    "@nestjs/testing": "^7.4.4",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "express": "^4.17.1",
    "ioredis": "^4.19.2",
    "knex": "^0.21.12",
    "lodash": "^4.17.20",
    "nestjs-knex": "^1.0.1",
    "nestjs-redis": "^1.2.8",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.5.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.4",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "7.5.1",
    "@nestjs/schematics": "7.1.2",
    "@types/bcrypt": "3.0.0",
    "@types/express": "4.17.8",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.6",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "4.5.0",
    "@typescript-eslint/parser": "4.5.0",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-import": "2.22.1",
    "husky": "^4.3.0",
    "jest": "26.4.2",
    "prettier": "2.1.2",
    "supertest": "4.0.2",
    "ts-jest": "26.4.1",
    "ts-loader": "6.2.2",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
